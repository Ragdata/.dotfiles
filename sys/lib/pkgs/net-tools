#-------------------------------------------------------------------
# CHECK
#-------------------------------------------------------------------
net-tools::check() { dpkg -l | grep net-tools 2> /dev/null 1>&2; return $?; }
#-------------------------------------------------------------------
# INSTALL
#-------------------------------------------------------------------
net-tools::install()
{
	sudo apt install -qq -y net-tools
}
#-------------------------------------------------------------------
# REMOVE
#-------------------------------------------------------------------
net-tools::remove()
{
	sudo apt purge -qq -y net-tools
}
#-------------------------------------------------------------------
