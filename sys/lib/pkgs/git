#-------------------------------------------------------------------
# CHECK
#-------------------------------------------------------------------
git::check() { dpkg -l | grep git 2> /dev/null 1>&2; return $?; }
#-------------------------------------------------------------------
# INSTALL
#-------------------------------------------------------------------
git::install()
{
	sudo apt install -qq -y git git-lfs
}
#-------------------------------------------------------------------
# REMOVE
#-------------------------------------------------------------------
git::remove()
{
	sudo apt purge -qq -y git git-lfs
}
