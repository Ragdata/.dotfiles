#-------------------------------------------------------------------
# CHECK
#-------------------------------------------------------------------
needrestart::check() { dpkg -l | grep needrestart 2> /dev/null 1>&2; return $?; }
#-------------------------------------------------------------------
# INSTALL
#-------------------------------------------------------------------
needrestart::install()
{
	sudo apt install -qq -y needrestart
}
#-------------------------------------------------------------------
# REMOVE
#-------------------------------------------------------------------
needrestart::remove()
{
	sudo apt purge -qq -y needrestart
}
#-------------------------------------------------------------------
