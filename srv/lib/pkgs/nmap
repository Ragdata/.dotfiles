#-------------------------------------------------------------------
# CHECK
#-------------------------------------------------------------------
nmap::check() { dpkg -l | grep nmap 2> /dev/null 1>&2; return $?; }
#-------------------------------------------------------------------
# INSTALL
#-------------------------------------------------------------------
nmap::install()
{
	sudo apt install -qq -y nmap
}
#-------------------------------------------------------------------
# REMOVE
#-------------------------------------------------------------------
nmap::remove()
{
	sudo apt purge -qq -y nmap
}
#-------------------------------------------------------------------
